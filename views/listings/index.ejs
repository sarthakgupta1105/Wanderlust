<% layout("/layouts/boilerplate") %>
<style>
    #filters{
        display:flex;
        flex-direction: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
        font-size:0.8rem;
    }
    .filter:hover{
        opacity:1;
    }
    .tax-info{
        display:none;
    }

    #taxToggle{
        border: solid 1px black;
        height:2.8rem;
        border-radius: 1rem;
        padding: 1rem;
        display: flex;
        align-items: center;
    }
</style>
<body>
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire-flame-curved"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water-ladder"></i></div>
            <p>Awesome pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-wheat-awn"></i></div>
            <p>Farm</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-tree"></i></div>
            <p>Woods</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-water"></i></div>
            <p>Lake</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castle</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ferry"></i></div>
            <p>Cruise</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-landmark-dome"></i></div>
            <p>Dome</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Igloo</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-wheelchair"></i></div>
            <p>Adapted</p>
        </div>
        <div id="taxToggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (let listing of listings){%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card listing-card col">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                    <div class="card-img-overlay">a</div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%=listing.title%></b><br>
                        <%=listing.country%><br>
                        <b>&#8377;<%=listing.price.toLocaleString("en-IN")%></b>/night
                        <i class="tax-info">&nbsp; +18%GST</i>
                    </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
</body>

<script>
    let taxSwitch = document.getElementById("taxToggle");
    taxSwitch.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display == "inline"){
                info.style.display = "none";
            }else{
                info.style.display = "inline";
            }
        }
    })
</script>
